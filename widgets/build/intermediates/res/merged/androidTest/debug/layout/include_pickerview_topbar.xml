<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/view_distance_s">

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_gray_to_white"
        android:gravity="center"
        android:paddingLeft="@dimen/view_distance_xl"
        android:paddingRight="@dimen/view_distance_xl"
        android:paddingTop="@dimen/view_distance_s"
        android:paddingBottom="@dimen/view_distance_s"
        android:text="@string/pickerview_cancel"
        android:textColor="@color/textcolor_gray"
        android:textSize="@dimen/textsize_small"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSubmit"
        android:layout_toRightOf="@+id/btnCancel"
        android:gravity="center"
        android:textColor="@color/pickerview_topbar_title"
        android:textSize="@dimen/textsize_middle"/>

    <TextView
        android:id="@id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_red_to_gray"
        android:gravity="center"
        android:paddingLeft="@dimen/view_distance_xl"
        android:paddingRight="@dimen/view_distance_xl"
        android:paddingTop="@dimen/view_distance_s"
        android:paddingBottom="@dimen/view_distance_s"
        android:text="@string/pickerview_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>
</RelativeLayout>
